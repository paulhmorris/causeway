datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
  previewFeatures = ["driverAdapters"]
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  password  Password?
  role      UserRole  @default(USER)
  contact   Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId String    @unique
  account   Account?  @relation(fields: [accountId], references: [id])
  accountId String?   @unique
  isActive  Boolean   @default(true)

  // Auth
  verificationCode       String?
  verificationCodeExpiry DateTime?
  loginAttempts          Int       @default(0)
  lastLoginAttempt       DateTime?
  lastLogin              DateTime?
  lockoutExpiration      DateTime?

  receipts              Receipt[]
  memberships           Membership[]
  engagements           Engagement[]
  passwordResets        PasswordReset[]
  contactAssignments    ContactAssigment[]
  reimbursementRequests ReimbursementRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  USER
  ADMIN
  SUPERADMIN
}

model Membership {
  id        Int            @id @default(autoincrement())
  user      User           @relation(fields: [userId], references: [id])
  userId    String
  org       Organization   @relation(fields: [orgId], references: [id])
  orgId     String
  role      MembershipRole
  isDefault Boolean        @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, orgId])
}

enum MembershipRole {
  MEMBER
  ADMIN
}

model Organization {
  id           String  @id @default(cuid())
  name         String
  subdomain    String? @unique
  primaryEmail String?

  // Deprecated
  host               String?
  replyToEmail       String  @default("no-reply")
  administratorEmail String?
  inquiriesEmail     String?

  accounts               Account[]
  memberships            Membership[]
  accountTypes           AccountType[]
  transactions           Transaction[]
  transactionItems       TransactionItem[]
  transactionItemMethods TransactionItemMethod[]
  transactionItemTypes   TransactionItemType[]
  reimbursementRequests  ReimbursementRequest[]
  receipts               Receipt[]
  contacts               Contact[]
  contactTypes           ContactType[]
  contactAssigments      ContactAssigment[]
  addresses              Address[]
  engagements            Engagement[]
  engagementTypes        EngagementType[]
  announcements          Announcement[]
  transactionCategories  TransactionCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([subdomain])
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordReset {
  id        String    @id @default(cuid())
  token     String    @unique @default(uuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                    String                 @id @default(cuid())
  code                  String
  description           String                 @db.Text
  user                  User?
  transactions          Transaction[]
  type                  AccountType            @relation(fields: [typeId], references: [id])
  typeId                Int
  reimbursementRequests ReimbursementRequest[]
  subscribers           AccountSubscription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id])
  orgId String

  @@unique([code, orgId])
}

model AccountType {
  id       Int       @id @default(autoincrement())
  name     String
  accounts Account[]

  org   Organization? @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String?

  @@unique([name, orgId])
}

model AccountSubscription {
  id           Int     @id @default(autoincrement())
  account      Account @relation(fields: [accountId], references: [id])
  accountId    String
  subscriber   Contact @relation(fields: [subscriberId], references: [id])
  subscriberId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([accountId, subscriberId])
}

model Transaction {
  id            String   @id @default(cuid())
  date          DateTime
  amountInCents Int
  categoryId    Int?
  description   String?  @db.Text
  account       Account  @relation(fields: [accountId], references: [id])
  accountId     String
  contact       Contact? @relation(fields: [contactId], references: [id])
  contactId     String?

  receipts         Receipt[]
  category         TransactionCategory? @relation(fields: [categoryId], references: [id])
  transactionItems TransactionItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String

  @@index([amountInCents])
}

model TransactionCategory {
  id           Int           @id @default(autoincrement())
  name         String
  transactions Transaction[]

  org   Organization? @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String?

  @@unique([name, orgId])
}

model TransactionItem {
  id            String                 @id @default(cuid())
  amountInCents Int
  transaction   Transaction            @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  transactionId String
  description   String?                @db.Text
  method        TransactionItemMethod? @relation(fields: [methodId], references: [id])
  methodId      Int?
  type          TransactionItemType    @relation(fields: [typeId], references: [id])
  typeId        Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String
}

model TransactionItemMethod {
  id                    Int                    @id @default(autoincrement())
  name                  String
  transactionItems      TransactionItem[]
  reimbursementRequests ReimbursementRequest[]

  organization Organization? @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId        String?

  @@unique([name, orgId])
}

model TransactionItemType {
  id               Int                           @id @default(autoincrement())
  name             String
  direction        TransactionItemTypeDirection? @default(IN)
  transactionItems TransactionItem[]

  organization Organization? @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId        String?

  @@unique([name, orgId])
}

enum TransactionItemTypeDirection {
  IN
  OUT
}

model ReimbursementRequest {
  id            String                     @id @default(cuid())
  amountInCents Int
  date          DateTime
  vendor        String?
  description   String?                    @db.Text
  approverNote  String?                    @db.Text
  user          User                       @relation(fields: [userId], references: [id])
  userId        String
  account       Account                    @relation(fields: [accountId], references: [id])
  accountId     String
  method        TransactionItemMethod      @relation(fields: [methodId], references: [id])
  methodId      Int
  status        ReimbursementRequestStatus @default(PENDING)
  receipts      Receipt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String
}

model Receipt {
  id                    String                 @id @default(cuid())
  s3Key                 String
  s3Url                 String?                @db.Text
  s3UrlExpiry           DateTime?
  title                 String
  user                  User                   @relation(fields: [userId], references: [id])
  userId                String
  reimbursementRequests ReimbursementRequest[]
  transactions          Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String
}

enum ReimbursementRequestStatus {
  PENDING
  APPROVED
  REJECTED
  VOID
}

model Contact {
  id               String  @id @default(cuid())
  email            String?
  alternateEmail   String?
  firstName        String?
  lastName         String?
  organizationName String?
  phone            String?
  alternatePhone   String?
  typeId           Int

  user                 User?
  address              Address?
  type                 ContactType           @relation(fields: [typeId], references: [id])
  transactions         Transaction[]
  engagements          Engagement[]
  accountSubscriptions AccountSubscription[]
  assignedUsers        ContactAssigment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String

  @@unique([email, orgId])
}

model ContactType {
  id       Int       @id @default(autoincrement())
  name     String
  contacts Contact[]

  org   Organization? @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String?

  @@unique([name, orgId])
}

model ContactAssigment {
  id        Int     @id @default(autoincrement())
  contact   Contact @relation(fields: [contactId], references: [id])
  contactId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String

  @@unique([contactId, userId])
}

model Address {
  id        String  @id @default(cuid())
  street    String
  street2   String?
  city      String
  state     String
  zip       String
  country   String
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId String  @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String
}

model Engagement {
  id          Int            @id @default(autoincrement())
  date        DateTime
  description String?        @db.Text
  type        EngagementType @relation(fields: [typeId], references: [id])
  typeId      Int
  contact     Contact        @relation(fields: [contactId], references: [id])
  contactId   String
  user        User           @relation(fields: [userId], references: [id])
  userId      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String
}

model EngagementType {
  id          Int          @id @default(autoincrement())
  name        String
  engagements Engagement[]

  org   Organization? @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String?

  @@unique([name, orgId])
}

model Announcement {
  id        Int       @id @default(autoincrement())
  title     String
  content   String    @db.Text
  expiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  org   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  orgId String
}
